<% if @article.errors.any? %>
<div class="row container">
    <div class="col-xs-10 col-xs-offset-1 alert alert-danger">
        <h2>
          <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
        </h2>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
</div>
<% end %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :title %>
                </div>
                <div class="control-label col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :article %>
                </div>
                <div class="control-label col-sm-8">
                    <%= f.text_area :text, rows: 10, class: "form-control", placeholder: "Article" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn.primary btn-lg btn-xlarge' %>
                </div>
            </div>
        <% end %>
        <div class="col-xs-4 col-xs-offset-2">
            <%= link_to '[Cancel]', articles_path %>
        </div>
    </div>
</div>
